#!/usr/bin/env bash
# configures nginx
apt-get update -y
apt-get install nginx -y
touch /var/www/html/index.html
echo "Holberton School" > /var/www/html/index.html
redir="rewrite ^\/redirect_me\/$ https:\/\/www.youtube.com\/watch?v=QH2-TGUlwu4 permanent;"
sed -i "s/server_name _;/server_name peytonsmith.tech;\n\t$redir/" /etc/nginx/sites-enabled/default
sed -i "s/server_name _;/server_name peytonsmith.tech;\n\t$redir/" /etc/nginx/sites-available/default
service nginx restart
